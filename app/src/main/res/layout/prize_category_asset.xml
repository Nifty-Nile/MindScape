<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardview_id"
    android:layout_height="200dp"
    android:clickable="true"
    android:scaleY="0.85"
    android:scaleX="0.85"
    android:foreground="?selectableItemBackground"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="5dp"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/whitewithblackstroke"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/textDis"
            android:textSize="12sp"
            android:textColor="#000000"
            android:fontFamily="@font/mouse_memoirs"
            android:gravity="left"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@drawable/black_inner_back"
            android:layout_margin="5dp"
            android:text="Select to continue..."/>

        <TextView
            android:id="@+id/textTitle"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/mouse_memoirs"
            android:background="@drawable/only_black"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>




    </LinearLayout>




</androidx.cardview.widget.CardView>