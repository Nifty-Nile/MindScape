<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="5dp"
    android:background="@color/white"
    android:backgroundTintMode="screen"
    android:backgroundTint="@color/transparentwhite"
    tools:context=".HelpGuide2">

    <TextView
        android:id="@+id/skip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:alpha="0.85"
        android:background="@drawable/blackwithwhitestroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Skip >>"
        android:textSize="16dp"
        android:textAlignment="center"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:elevation="10dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/questionNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10dp">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:gravity="right"
                android:text="Question 2/10"
                android:textColor="#000000"
                android:fontFamily="@font/mouse_memoirs"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="?selectableItemBackground"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10dp">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:fontFamily="@font/mouse_memoirs"
                android:gravity="right"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:text=" Timer 2:33 "
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="-2dp"
        android:foreground="?selectableItemBackground"
        android:scaleX="0.85"
        android:scaleY="0.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        cardview:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/blackwithwhitestroke">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="55dp"
                android:fontFamily="@font/mouse_memoirs"
                android:gravity="center"
                android:padding="15dp"
                android:text="In the famous book Harry Potter, where does Vernon Dursley work? "
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionNumber" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">


        <androidx.cardview.widget.CardView
            android:id="@+id/expert"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/expert"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/linearLayoutexpert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/kaal"
                    android:scaleX="0.85"
                    android:scaleY="0.7" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/swap"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/linearLayoutSwap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flip1"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/audience"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5dp">


            <LinearLayout
                android:id="@+id/linearLayoutAudience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/audience1"
                    android:scaleX="0.7"
                    android:scaleY="0.75" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fiftyfifty"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5dp">


            <LinearLayout
                android:id="@+id/linearLayoutfiftyfifty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="50:50"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:scaleY="0.80"
        android:scaleX="0.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <LinearLayout
            android:id="@+id/linearButtonlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/button1"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:fontFamily="@font/mouse_memoirs"
                android:background="@color/lightgreen"
                android:text="Grunnings"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mouse_memoirs"
                android:background="@drawable/optionbuttonback"
                android:text="The public library"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@color/lightred"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mouse_memoirs"
                android:text="O'Toole and Dursley law"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mouse_memoirs"
                android:background="@drawable/optionbuttonback"
                android:text="Dunder-Mifflin"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/mouse_memoirs"
        android:background="@drawable/whitewithblackstroke"
        
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/help2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/help2info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="end"
            android:background="@drawable/circular_shape_view"
            android:fontFamily="@font/mouse_memoirs"
            android:gravity="center"
            android:text="Hello! I am Dr. Brain"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="70dp"
            android:layout_gravity="end"
            android:background="@drawable/circular_shape_view" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/circular_shape_view" />


        <ImageView
            android:id="@+id/drlogo"
            android:layout_width="200dp"
            android:layout_gravity="end"
            android:layout_height="200dp"
            android:src="@drawable/logodr" />

    </LinearLayout>

    <ImageView
        android:id="@+id/timerarrow"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/arrowcurve"
        android:rotation="150"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/qnoarrow"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/arrowcurve"
        android:rotation="150"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/lifelinedes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:fontFamily="@font/mouse_memoirs"
            android:text="Expert Advise: Choose to consult our finest suite of experts."
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:fontFamily="@font/mouse_memoirs"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="Swap : Choose to flip the question to new one in-case you aren't sure of the answer."
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:fontFamily="@font/mouse_memoirs"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="Audience Poll: MindScapers from all over the world cast their vote. Choose the right prediction."
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:fontFamily="@font/mouse_memoirs"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="50-50: dplit the the choices to two final options and ease your brain storming."
            android:textColor="@color/black"
            android:textSize="24dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>