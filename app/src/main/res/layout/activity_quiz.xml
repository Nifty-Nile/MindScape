<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="30"
    android:background="@color/white"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UI.SinglePlayerQuiz">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?selectableItemBackground"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:cardCornerRadius="5sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/Speaker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10sp">


            <ImageView
                android:id="@+id/speakerImage"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/speakeron" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="15sp"
        android:clickable="true"
        android:elevation="10sp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10sp">


            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:elevation="10sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right"
                android:text=""
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="5sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?selectableItemBackground"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:cardCornerRadius="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/TimerLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10sp">


            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:elevation="10sp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:text=""
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView46"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="-2sp"
        android:foreground="?selectableItemBackground"
        android:scaleX="0.95"
        android:scaleY="0.95"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        cardview:cardCornerRadius="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitewithblackstroke"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/myPic"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:layout_margin="3sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/insidecardviewlessradius"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5sp"
                            android:layout_marginTop="3sp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim11"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim12"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim13"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim14"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim15"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim16"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim17"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim18"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim19"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/anim20"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_weight="1"
                                android:elevation="-5sp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:lottie_speed="1" />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="20sp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="-2sp"
        android:foreground="?selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView46"
        cardview:cardCornerRadius="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blackwithwhitestroke">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="15sp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionNumber" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:weightSum="4"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/expert"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5sp">

            <LinearLayout
                android:id="@+id/linearLayoutexpert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/kaal"

                    android:scaleX="0.85"
                    android:scaleY="0.7" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/swap"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5sp">

            <LinearLayout
                android:id="@+id/linearLayoutSwap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flip1"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/audience"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5sp">


            <LinearLayout
                android:id="@+id/linearLayoutAudience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/audience1"
                    android:scaleX="0.7"
                    android:scaleY="0.75" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fiftyfifty"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:scaleX="0.75"
            android:scaleY="0.75"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            cardview:cardCornerRadius="5sp">


            <LinearLayout
                android:id="@+id/linearLayoutfiftyfifty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whitewithblackstroke">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="50:50"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="45sp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/nextbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearButtonlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:background="@drawable/optionbuttonback"
                android:fontFamily="@font/roboto_bold"
                android:shadowColor="@color/black"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginTop="8sp"
                android:background="@drawable/optionbuttonback"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginTop="8sp"
                android:background="@drawable/optionbuttonback"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginTop="8sp"
                android:background="@drawable/optionbuttonback"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="#ffffff"

                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/nextbutton"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="10sp"
        android:alpha="0.65"
        android:background="@drawable/blackwithwhitestroke"
        android:enabled="false"
        android:fontFamily="@font/roboto_bold"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Next"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>