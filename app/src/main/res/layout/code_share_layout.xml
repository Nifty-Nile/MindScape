<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scaleY="0.9"
    android:scaleX="0.9"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:background="@color/transparent"
    android:id="@+id/layoutDialogContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitewithblackstroke"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageIcon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/codeanim"
            app:lottie_speed="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/insidecardviewlessradius"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout35"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIcon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/mouse_memoirs"
                android:text="Submitted successfully!"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="28dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username : dingdong"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mouse_memoirs"
                android:textColor="@color/black"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/codeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password : 393032"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/mouse_memoirs"
                android:textColor="@color/black"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/mouse_memoirs"
                android:text="What's Next? "
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/mouse_memoirs"
                android:text="Share the word! Challenge people across the world. Showcase your creativity and test the knowledge of MindScapers!"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="15dp"
                />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/linearLayout35"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
            app:layout_constraintStart_toStartOf="@+id/layoutDialog">



            <Button
                android:id="@+id/buttonHome"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/insidecardviewlessradius"
                android:fontFamily="@font/mouse_memoirs"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:scaleY="0.95"
                android:scaleX="0.95"
                android:layout_weight="1"
                android:text="Home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
                app:layout_constraintStart_toStartOf="@+id/layoutDialog" />

            <Button
                android:id="@+id/buttonYes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/blackwithwhitestroke"
                android:fontFamily="@font/mouse_memoirs"
                android:textColor="@color/white"
                android:text="PLAY"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
                app:layout_constraintStart_toStartOf="@+id/layoutDialog" />

            <Button
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/whitewithblacklessradius"
                android:fontFamily="@font/mouse_memoirs"
                android:textColor="@color/black"
                android:text="SHARE"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/layoutDialog"
                app:layout_constraintStart_toStartOf="@+id/layoutDialog" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>