<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quibackfinal"
    android:backgroundTintMode="screen"
    android:backgroundTint="@color/transparentwhite"
    tools:context=".HelpGuide3">

    <TextView
        android:id="@+id/skip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:alpha="0.85"
        android:background="@drawable/blackwithwhitestroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Skip >>"
        android:textSize="16dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/MS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/mkstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mouse_memoirs"
                android:text="Marking Scheme"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </androidx.cardview.widget.CardView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MindScape has a unique marking system for various quiz modes. For the aim to mark the uniqueness our quizzers posses!"
            android:textSize="20dp"
            android:fontFamily="@font/mouse_memoirs"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/spTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/MS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Player"
                android:fontFamily="@font/mouse_memoirs"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/sp_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/spTag"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" NORMAL MODE \n\n Initial Points: 6000 \n Per second deduction: 6 \n Correct Ans: +1000 \n LifeLine Cost: -500 "
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mouse_memoirs"
                    android:textAlignment="textStart"
                    android:textSize="20dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mouse_memoirs"
                    android:text=" PICTURE MODE \n\n Initial Points: 6000 \n Per second deduction: 6 \n Correct Ans: +1000 \n LifeLine Cost: -500   "
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </androidx.cardview.widget.CardView>
            
            
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/TourTag"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/MS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online and Tournaments"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tour_ll"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/TourTag"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Initial Points: 2000 \n Time Score: 10 x (180-Time Taken) \n Correct Ans: +1000 \n LifeLine Cost: -500   "
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mouse_memoirs"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </androidx.cardview.widget.CardView>
        
        
        
        
        
        

    
    <LinearLayout
        android:id="@+id/levels"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/levelstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievements"
                    android:fontFamily="@font/mouse_memoirs"
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="30dp"/>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/levelpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/levels"
                android:scaleType="fitXY"
                android:layout_margin="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/help3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/help3info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="end"
            android:background="@drawable/circular_shape_view"
            android:fontFamily="@font/mouse_memoirs"
            android:gravity="center"
            android:text="Hello! I am Dr. Brain"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="70dp"
            android:layout_gravity="end"
            android:background="@drawable/circular_shape_view" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/circular_shape_view" />


        <ImageView
            android:id="@+id/drlogo"
            android:layout_width="200dp"
            android:layout_gravity="end"
            android:layout_height="200dp"
            android:src="@drawable/logodr" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
