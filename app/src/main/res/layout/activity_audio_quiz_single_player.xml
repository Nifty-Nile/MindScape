<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="5dp"
    android:background="@color/white"
    tools:context=".quizActivity">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/backlitemodeanim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="-5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/backquiz"
        app:lottie_speed="0.1" />






    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:clickable="true"
        android:elevation="10dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10dp">


            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:fontFamily="@font/mouse_memoirs"
                android:gravity="right"
                android:text="Question 1/10"
                android:textColor="#000000"
                android:textSize="30dp" 
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="?selectableItemBackground"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitewithblackstroke"
            android:elevation="10dp">


            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:fontFamily="@font/mouse_memoirs"
                android:gravity="right"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:text=""
                android:textColor="#000000"
                android:textSize="30dp" 
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="-2dp"
                android:foreground="?selectableItemBackground"
                android:scaleY="0.85"
                android:scaleX="0.85"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                cardview:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blackwithwhitestroke"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/questionTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/mouse_memoirs"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@id/question"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/questionNumber" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleY="0.85"
                android:scaleX="0.85"
                android:background="@drawable/transparentbox"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/questionImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:fontFamily="@font/mouse_memoirs"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/questionTip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/backwardanim"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false"
                            app:lottie_rawRes="@raw/backwardmusicanim"
                            app:lottie_speed="1" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mainButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:layout_gravity="center"
                            android:foreground="?selectableItemBackground"
                            cardview:cardCornerRadius="30dp"
                            >

                            <LinearLayout
                                android:id="@+id/linearFun1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/playbuttonfinal"
                                android:orientation="vertical">

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/forwardanim"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false"
                            app:lottie_rawRes="@raw/forwardmusicanim"
                            app:lottie_speed="1" />

                    </LinearLayout>




                </LinearLayout>

                <SeekBar
                    android:id="@+id/determinateBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/custom_progressbar"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:max="100"
                    android:layout_height="wrap_content"
                    android:progress="0"/>


            </LinearLayout>





            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView123">


                <androidx.cardview.widget.CardView
                    android:id="@+id/expert"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/expert"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    cardview:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/linearLayoutexpert"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/whitewithblackstroke">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/kaal"
                            android:scaleX="0.85"
                            android:scaleY="0.7" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/swap"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    cardview:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/linearLayoutSwap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/whitewithblackstroke">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/flip1"
                            android:scaleX="0.7"
                            android:scaleY="0.7" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/audience"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    cardview:cardCornerRadius="5dp">


                    <LinearLayout
                        android:id="@+id/linearLayoutAudience"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/whitewithblackstroke">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/audience1"
                            android:scaleX="0.7"
                            android:scaleY="0.75" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fiftyfifty"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    cardview:cardCornerRadius="5dp">


                    <LinearLayout
                        android:id="@+id/linearLayoutfiftyfifty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/whitewithblackstroke">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="50:50"
                            android:textColor="#000000"
                            android:textSize="30dp" 
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:scaleX="0.85"
                android:scaleY="0.80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                <LinearLayout
                    android:id="@+id/linearButtonlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/button1"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:background="@drawable/optionbuttonback"
                        android:fontFamily="@font/mouse_memoirs"
                        android:shadowColor="@color/black"

                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/optionbuttonback"
                        android:fontFamily="@font/mouse_memoirs"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/optionbuttonback"
                        android:fontFamily="@font/mouse_memoirs"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/optionbuttonback"
                        android:fontFamily="@font/mouse_memoirs"
                        android:text=""
                        android:textColor="#ffffff"

                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/nextbutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:alpha="0.65"
                android:background="@drawable/blackwithwhitestroke"
                android:enabled="false"
                android:fontFamily="@font/mouse_memoirs"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:text="Next"
                android:textSize="30dp" 
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


        </LinearLayout>


    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>